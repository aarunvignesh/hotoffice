{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./.././node_modules/@types"
        ],
        "allowJs": true
    },
    "exclude": [
        "tests"
    ]
}